---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import SocialIcon from "@components/SocialIcon.astro";
import { SITE, SOCIALS, UI_TEXTS } from "@consts";
---

<PageLayout title={UI_TEXTS.CONNECT_TITLE} description={UI_TEXTS.CONNECT_TEXT}>
	<Container>
		<h1 class="animate text-2xl font-semibold text-black dark:text-white">
			{UI_TEXTS.CONNECT_TITLE}
		</h1>
		<div class="space-y-16">
			<section class="animate space-y-4">
				<article>
					<p>{UI_TEXTS.CONNECT_TEXT}</p>
				</article>
				<ul class="flex flex-wrap gap-4">
					{
						SOCIALS.map((SOCIAL) => (
							<li>
								<a
									href={SOCIAL.HREF}
									target="_blank"
									rel="noopener noreferrer"
									aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
									class="flex items-center gap-2 hover:text-black dark:hover:text-white transition-colors duration-300"
								>
									<SocialIcon name={SOCIAL.NAME} />
									<span>{SOCIAL.NAME}</span>
								</a>
							</li>
						))
					}
					<li>
						<Link
							href={`mailto:${SITE.EMAIL}`}
							aria-label={`Email ${SITE.NAME}`}
						>
							✉️ {SITE.EMAIL}
						</Link>
					</li>
				</ul>
			</section>
		</div>
	</Container>
</PageLayout>

