---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post: Props = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
    title={`${post.data.title} | David Torres`}
    description={post.data.description}
>
    <article class="max-w-3xl mx-auto px-6 py-20">
        <header class="mb-12 text-center">
            <div class="mb-6">
                <a
                    href="/"
                    class="text-cyan-400 hover:text-cyan-300 transition-colors font-medium"
                    >‚Üê Back to Home</a
                >
            </div>
            <h1
                class="text-4xl md:text-5xl font-bold text-slate-100 mb-6 leading-tight"
            >
                {post.data.title}
            </h1>
            <time
                datetime={post.data.date.toISOString()}
                class="text-slate-400 font-mono"
            >
                {
                    post.data.date.toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                    })
                }
            </time>
        </header>
        <div class="prose prose-invert prose-lg prose-cyan mx-auto">
            <Content />
        </div>
    </article>
</BaseLayout>
