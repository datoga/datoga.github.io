---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { MENTORING } from "@consts";
---

<PageLayout title={MENTORING.TITLE} description={MENTORING.DESCRIPTION}>
	<Container>
		<h1 class="animate text-2xl font-semibold text-black dark:text-white">
			{MENTORING.TITLE}
		</h1>
		<div class="space-y-16">
			<!-- Intro + Video -->
			<section class="space-y-6">
				<article class="space-y-4">
					{
						MENTORING.PARAGRAPHS.map((paragraph) => (
							<p class="animate" set:html={paragraph} />
						))
					}
					{
						MENTORING.CALLOUT && (
							<div class="animate p-6 rounded-xl border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-950/30 shadow-md space-y-4">
								{MENTORING.CALLOUT_TITLE && (
									<p class="text-xl font-bold text-blue-900 dark:text-blue-100">
										{MENTORING.CALLOUT_TITLE}
									</p>
								)}
								<p
									class="text-base font-medium text-blue-900 dark:text-blue-100 leading-relaxed"
									set:html={MENTORING.CALLOUT}
								/>
								{MENTORING.CALLOUT_SUBTITLE && (
									<h3 class="text-lg font-semibold text-blue-900 dark:text-blue-100 pt-2">
										{MENTORING.CALLOUT_SUBTITLE}
									</h3>
								)}
								{MENTORING.FEATURES && (
									<ul class="space-y-2 list-none text-blue-800 dark:text-blue-200">
										{MENTORING.FEATURES.map((feature) => (
											<li>{feature}</li>
										))}
									</ul>
								)}
							</div>
						)
					}
				</article>
			</section>

			<!-- Registration Form -->
			<section class="animate space-y-6">
				<h2 class="text-xl font-semibold text-black dark:text-white">
					Solicita tu plaza
				</h2>
				<div class="w-full rounded-xl overflow-hidden">
					<iframe
						src="https://docs.google.com/forms/d/e/1FAIpQLSeGXhjxKg1jJNoSpVXE2h3IKHw9ymcTfSikapzmpO0TKaBXZw/viewform?embedded=true"
						width="100%"
						height="1100"
						frameborder="0"
						marginheight="0"
						marginwidth="0"
						class="bg-transparent"
						>Cargando formularioâ€¦</iframe
					>
				</div>
			</section>

			<!-- FAQ -->
			<section class="animate space-y-6">
				<h2 class="text-xl font-semibold text-black dark:text-white">
					{MENTORING.FAQ_TITLE}
				</h2>
				<div class="space-y-4">
					{
						MENTORING.FAQ.map((item) => (
							<details class="group rounded-lg border border-black/10 dark:border-white/10 p-4 cursor-pointer">
								<summary class="font-semibold text-black dark:text-white list-none flex justify-between items-center">
									{item.QUESTION}
									<svg
										xmlns="http://www.w3.org/2000/svg"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										class="size-5 transition-transform group-open:rotate-180"
									>
										<polyline points="6 9 12 15 18 9" />
									</svg>
								</summary>
								<p class="mt-3 text-black/70 dark:text-white/70">
									{item.ANSWER}
								</p>
							</details>
						))
					}
				</div>
			</section>
		</div>
	</Container>
</PageLayout>
